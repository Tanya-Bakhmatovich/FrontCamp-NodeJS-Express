html
    head
        title!= title
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        style
          include ./main.css
    body
        h1!= message
        h3 Hello, &nbsp;
            strong= user
        h4 Get list of blogs
        div(id='result-list-blogs')
        div(class='form-group')
        button(id='get-blogs-button' type='button' class='btn btn-primary') Get blogs
        hr
        h4 Get blog with id
        form(id='blog-form')
            label Id
              input(id='id-input-get', type='text' class='form-control')
              div(id='result-blog-with-id')
              button(id='get-blog-with-id-button' type='button' class='btn btn-primary') Get blog
            hr
        h4 Create blog
        div(class='form-group')
            div
              div(class='col-auto')
                  label Title
                      input(id='title-input-post', type='text' class='form-control')
              div(class='col-auto')
                  label Author
                      input(id='author-input-post', type='text' class='form-control')
              div(class='col-auto')
                  label Published
                      input(id='date-input-post', type='text' class='form-control')
            div(id='result-creating')
            button(id='post-blog-button', type='button' class='btn btn-primary') Create
            hr
        h4 Edit blog
        div(id='result-editing')
        form
          div(class='form-group')
              div
                  div(class='col-auto')
                      label Title
                          input(id='title-input-put', type='text' class='form-control')
                  div(class='col-auto')
                      label Author
                          input(id='author-input-put', type='text' class='form-control')
                  div(class='col-auto')
                      label Published
                          input(id='date-input-put', type='text' class='form-control')
                  div(class='col-auto')
                      label Id
                          input(id='id-input-put', type='text' class='form-control')
              button(id='edit-blog-button', type='button' class='btn btn-primary') Edit
              hr
        h4 Delete blog
        div(id='result-deleting')
        form
        div(class='form-group')
            label ID
                input(id='id-input-delete', type='text' class='form-control')
        button(id='delete-blog-button', type='button' class='btn btn-primary') Delete blog
    script
      include blogs.js
